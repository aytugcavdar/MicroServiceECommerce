# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database Names
CATALOG_DB=MicroECommerce_CatalogDb
BASKET_DB=MicroECommerce_BasketDb
ORDER_DB=MicroECommerce_OrderDb
INVENTORY_DB=MicroECommerce_InventoryDb
IDENTITY_DB=MicroECommerce_IdentityDb

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_min_32_characters_long_here
JWT_ISSUER=MicroECommerce
JWT_AUDIENCE=MicroECommerceUsers
JWT_EXPIRATION_MINUTES=60

# Seq Configuration
SEQ_URL=http://seq:5341
SEQ_API_KEY=your_seq_api_key_here

# API Gateway
GATEWAY_PORT=5000

# Service Ports
CATALOG_API_PORT=5001
BASKET_API_PORT=5002
ORDER_API_PORT=5003
INVENTORY_API_PORT=5004
IDENTITY_API_PORT=5005

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:4200