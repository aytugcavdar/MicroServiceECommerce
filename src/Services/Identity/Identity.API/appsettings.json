{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "IdentityConnectionString": "Host=localhost;Port=5432;Database=MicroECommerce_IdentityDb;Username=admin;Password=Password123!;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "MicroECommerce.Identity",
      "Environment": "Development"
    }
  },
  "TokenOptions": {
    "Audience": "microecommerce.com",
    "Issuer": "microecommerce.com",
    "AccessTokenExpiration": 15,
    "RefreshTokenExpiration": 10080,
    "SecurityKey": "Bu_Cok_Uzun_Ve_Guvenli_Rastgele_Bir_Anahtar_Olmali_En_Az_64_Karakter_Uzunlugunda_1234567890!@#$%"
  },
  "EmailOptions": {
    "SmtpServer": "smtp.example.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply@example.com",
    "SenderName": "MicroECommerce Team",
    "Username": "YOUR_SMTP_USERNAME",
    "Password": "YOUR_SMTP_PASSWORD",
    "EnableSsl": false,
    "TemplateFolder": "Templates/EmailTemplates",
    "SendEmailInDevelopment": true
  },
  "SecuritySettings": {
    "MaxActiveSessions": 5
  },
  "TokenCleanup": {
    "IntervalHours": 6,
    "RetentionDays": 30
  }
}