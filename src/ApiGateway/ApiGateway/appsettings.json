{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  },

  "ReverseProxy": {
    "Routes": {
      // ============================================
      // IDENTITY SERVICE ROUTES
      // ============================================
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },

      // ============================================
      // CATALOG SERVICE ROUTES
      // ============================================
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/catalog/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ],
        "RateLimiterPolicy": "fixed-window"
      },

      // ============================================
      // HEALTH CHECK ROUTES (Her servis i√ßin)
      // ============================================
      "identity-health": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/health/identity"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      },
      "catalog-health": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/health/catalog"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      }
    },

    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-destination-1": {
            "Address": "http://identity-api:80"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },

      "catalog-cluster": {
        "Destinations": {
          "catalog-destination-1": {
            "Address": "http://catalog-api:80"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  },

  "AllowedHosts": "*"
}